<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RuntimeFrameworkVersion>8.0.20</RuntimeFrameworkVersion>
    <ImplicitUsings>disable</ImplicitUsings>
    <DebugType>portable</DebugType>
    <Nullable>enable</Nullable>
    <RollForward>Disable</RollForward>
  </PropertyGroup>
  <ItemGroup>
    <FrameworkReference Update="Microsoft.NETCore.App" RuntimeFrameworkVersion="8.0.20" />
    <!-- Ignore dynamically generated Engine files -->
    <Compile Remove="engine\**" />
    <!-- Reference the dynamically built Engine.dll -->
    <ProjectReference Include="engine\Engine.csproj" />
  </ItemGroup>
</Project>